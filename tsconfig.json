{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noEmit": false,
    "paths": {
      "@/*": ["src/*"],
      "$/*": ["test/*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": ["scripts", "transformers"]
}
